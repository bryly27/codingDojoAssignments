<% content_for :title do %>
	Profile
<% end %>
	
<%content_for :css do%>
	<style type="text/css">
		.container {
			margin: 40px 0 0 50px;
		}
<% end %>

<% content_for :body do %>
	<div class='container'>
		<h3>First name: <%= @user.first_name %></h3>
		<h3>Last name: <%= @user.last_name %></h3>
		<h3>Email: <%= @user.email_address %></h3>
		<a href='/users/<%= @user.id %>/edit'>Edit</a> | <a href='/users/index'>Back</a>
	</div>

<% end %>

